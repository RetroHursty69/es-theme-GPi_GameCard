         <pos>1.29 0.954</pos>      
         <textColor>ffffff</textColor>
         <iconColor>ffffff</iconColor>
      </helpsystem>
   </view>    
   
<!--
System Gamelist
--> 

   <view name="detailed,video">
      <textlist name="gamelist">
         <zIndex>43</zIndex>	      
	     <selectorColor>1c1c1c00</selectorColor>
	     <selectedColor>00a2ff</selectedColor>   
         <pos>0.55 0.02</pos>
         <size>0.44 0.64</size>
         <primaryColor>ffffff</primaryColor>
         <secondaryColor>ffffff</secondaryColor>
         <fontPath>./_inc/fonts/impact.ttf</fontPath>
         <fontSize>0.059</fontSize>
