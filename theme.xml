<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>

<!--
Carousel wheel and main menu background
-->


<feature supported="carousel">
   <view name="system">
      <carousel name="systemcarousel">
        <type>horizontal</type>
        <pos>-0.24 -0.17</pos>
        <size>1.48 1</size>
        <logoScale>1.1</logoScale>
         <zIndex>41</zIndex>          
        <logoSize>0.67 0.67</logoSize>
        <color>00000000</color>
        <maxLogoCount>3</maxLogoCount>
		<logoAlignment>bottom</logoAlignment>        
      </carousel>
      <image name="overlay" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>1</zIndex>                 
         <path>./_inc/images/background.png</path>
      </image>                    
      <text name="systemInfo">     
         <pos>0.0 0.85</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>00a2ff</color>
         <fontPath>./_inc/fonts/impact.ttf</fontPath>
	     <fontSize>0.1</fontSize>
         <zIndex>44</zIndex>	     
      </text>            
   </view>
</feature>


<!--
On Screen help
-->

   <view name="system">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/impact.ttf</fontPath>
         <fontSize>0.035</fontSize>     
         <pos>1.263 0.911</pos>      
         <textColor>ffffff</textColor>
         <iconColor>ffffff</iconColor>
      </helpsystem>
   </view>  

   <view name="detailed,video,basic">
